{# Blog Post Item Template - Clickable card for better UX #}
<article class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6 hover:shadow-lg transition-all reveal flex flex-col h-full cursor-pointer group" onclick="window.location.href='blog/{{ item.slug }}.html'">
    <div class="flex-grow space-y-4">
        <div>
            <h3 class="text-xl font-semibold heading text-gray-900 dark:text-white leading-tight group-hover:text-teal-600 dark:group-hover:text-teal-400 transition-colors">
                {{ item.title }}
            </h3>
            {% if item.date %}
            <time class="text-sm text-gray-500 dark:text-gray-400 mt-2 block">{{ item.date }}</time>
            {% endif %}
        </div>
        
        {% if item.excerpt %}
        <div class="text-gray-600 dark:text-gray-300 leading-relaxed">
            {{ item.excerpt | safe }}
        </div>
        {% endif %}
        
        {% if item.tags %}
        <div class="flex flex-wrap gap-2">
            {% for tag in item.tags %}
            <span class="inline-block px-2 py-1 text-xs font-medium text-gray-600 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 rounded-md">{{ tag }}</span>
            {% endfor %}
        </div>
        {% endif %}
    </div>
    
    {# Visual button indicator at the bottom #}
    <div class="pt-4 mt-auto publication-actions">
        <div class="inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium bg-gray-50 dark:bg-gray-800 group-hover:bg-gray-100 dark:group-hover:bg-gray-700 text-gray-700 dark:text-gray-300 group-hover:text-teal-600 dark:group-hover:text-teal-400 border border-gray-200 dark:border-gray-700 rounded-full transition-all">
            <i class="fas fa-book-open text-teal-600/70 group-hover:scale-110 transition-transform"></i>
            Read Post
        </div>
    </div>
</article>
