<div class="flex items-start justify-between gap-6 py-4 reveal">
    <div class="flex-1">
        <div class="space-y-1">
            <p class="font-semibold text-gray-900 dark:text-white leading-relaxed">
                {% if item.url %}
                <a href="{{ item.url }}" target="_blank" rel="noopener" class="hover:text-teal-600 dark:hover:text-teal-400 transition-colors">{{ item.description }}</a>
                {% else %}
                {{ item.description }}
                {% endif %}
            </p>
            <p class="text-lg font-semibold italic text-teal-600 dark:text-teal-400 tracking-wide">{{ item.venue }}</p>
        </div>
    </div>
    <span class="text-sm font-medium text-teal-600 dark:text-teal-400 whitespace-nowrap">{{ item.date }}</span>
</div>
